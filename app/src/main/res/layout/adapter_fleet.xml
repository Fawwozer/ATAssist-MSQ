<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fleet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clear">

    <RelativeLayout
        android:id="@+id/rl_fleet_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/tv_fleet_dmi_days"
        android:background="@drawable/bg_clear">

        <TextView
            android:id="@+id/tv_fleet_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Head line"
            android:textSize="19sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fleet_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_fleet_head"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tv_fleet_dmi_days"
        android:background="@drawable/bg_clear"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_fleet_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Flap position sensor is inoperative"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_fleet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fleet_message"
            android:layout_alignParentStart="true"
            android:text="09.03.2021" />

        <TextView
            android:id="@+id/tv_fleet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fleet_message"
            android:layout_alignParentEnd="true"
            android:text="19:14" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_fleet_dmi_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/time_bomb"
        android:layout_alignBottom="@id/rl_fleet_body"
        android:layout_margin="6dp"
        android:gravity="center"
        android:text="120"
        android:textSize="50sp" />

</RelativeLayout>