<resources>

    <style name="ScheduleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/backwards</item>
    </style>
    <style name="ScheduleTextStyle.Light">
        <item name="android:textColor">@color/lightPrimaryTextColor</item>
    </style>
    <style name="ScheduleTextStyle.Dark">
        <item name="android:textColor">@color/darkPrimaryTextColor</item>
    </style>

    <style name="BottomAppBarStyle"/>
    <style name="BottomAppBarStyle.Light">
        <item name="backgroundTint">@color/lightPrimaryColorDark</item>
    </style>
    <style name="BottomAppBarStyle.Dark">
        <item name="backgroundTint">@color/darkPrimaryColorDark</item>
    </style>
</resources>
